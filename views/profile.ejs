<!doctype html>
<html>
<head>
    <title>Grocery Site</title>
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poltawski+Nowy:ital@1&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class=""></span>Grocery Store</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
        </div>
        <div class="col-sm-6">
          <h3>Grocery Cart</h3>
          <ul class="messages">
          <% for(var i=0; i<saved.length; i++) {%>
            <li class="message">
              <span><%= saved[i].item %></span> 
              <span><%= saved[i].price %></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %> 
          <button class="clearAll">Clear All Groceries</button>
          </ul>

          <h2>Pantry</h2>
          <% for(var i=0; i<grocery.length; i++) {%>
          <form action="/save" method="POST">
           <input name="item" value="<%= grocery[i].item%>"></input>
           <input name="price" value="<%= grocery[i].price %>"></input>
            <button type="submit">Add to Cart</button>
          </form>
          <% } %> 
         
        </div>
        

</div>

<script src="main.js"></script>

</body>
</html>
